snippet iter_gff

def iter_gff(handle):
    """ yield gff items as hashes """

    for line in handle:
        if line.startswith("##FASTA"):
            break
        if line.startswith("#"):
            continue

        fields = line.strip().split("\t")

        dat = {
            "contig": fields[0],
            "source": fields[1],
            "feature": fields[2],
            "start": int(fields[3]),
            "end": int(fields[4]),
            "score": fields[5],
            "strand": fields[6],
            "frame": fields[7],
            "attributes": dict(x.split("=") for x in fields[8].split(";")),
        }

        yield dat
endsnippet

