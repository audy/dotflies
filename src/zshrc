# store history FOR-EV-ER
export HISTFILE="${HOME}/.history/$(date -u +%Y-%m-%d.%H.%M.%S)_$$"
export SAVEHIST=100
setopt APPEND_HISTORY
setopt SHARE_HISTORY

#
# LOOKS
#

# folor $color shortcuts
autoload -U colors && colors
export TERM='xterm-256color'

EMOJI=(
‚òïÔ∏è
üçÑ
